<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>Merkez Bankası Kur API</title>
    <style>
        .card {
            margin: 0 auto;
            /* Added */
            float: none;
            /* Added */
            margin-bottom: 10px;
            /* Added */
        }
    </style>

</head>

<body>
    <div id="app">
        <div class="card" style="width: 18rem;">

            <div class="card-body">
                <h5 class="card-title">Para Birimi Değiştir</h5>
                <div class="form-group">
                    <label>Tarih</label>
                    <input type="date" v-model="Tarih" @change="GetDoviz" />
                </div>
                <div class="form-group">
                    <label>Kaynak Para Birimi</label>
                    <select class="form-control" v-model="KaynakParaBirimi" @change="KaynakChange">
                        <option></option>
                        <option value="TRY" :selected="KaynakParaBirimi === 'TRY'">TRY</option>
                        <option value="USD" :selected="KaynakParaBirimi === 'USD'">$</option>
                        <option value="EUR" :selected="KaynakParaBirimi === 'EUR'">€</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Hedef Para Birimi</label>
                    <select class="form-control" v-model="HedefParaBirimi" @change="HeadefChange">
                        <option></option>
                        <option value="TRY" :selected="KaynakParaBirimi === 'TRY'">TRY</option>
                        <option value="USD" :selected="KaynakParaBirimi === 'USD'">$</option>
                        <option value="EUR" :selected="KaynakParaBirimi === 'EUR'">€</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Tutar</label>
                    <input type="number" v-model="Tutar" @input="DovizHesapla" />
                </div>
                <div v-if="this.Tutar>0">
                    <label>Sonuç : {{this.Result}}</label>
                </div>
            </div>
        </div>


    </div>
    <!-- Optional JavaScript; choose one of the two! -->
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>

        var app = new Vue({
            el: '#app',
            data: {
                Tarih: "",
                HedefParaBirimi: "",
                KaynakParaBirimi: "",
                Tutar: 0.00,
                KurList: [],
                Result: "0.00",
                SelectHedefDovizInfo: "",
                SelectKaynakDovizInfo: ""

            },

            methods: {
                KaynakChange: (e) => {

                    this.KaynakParaBirimi = e.target.value;
                    if (e.target.value === "TRY") {
                        this.SelectKaynakDovizInfo = 1;
                    } else {
                        let response = this.KurList.Result.filter((item) => {
                            return item.dovizName === e.target.value;
                        });

                        this.SelectKaynakDovizInfo = response[0].value;
                    }

                },
                HeadefChange: (e) => {
                    this.HedefParaBirimi = e.target.value;
                    if (e.target.value === "TRY") {
                        this.SelectHedefDovizInfo = 1;
                    } else {
                        let response = this.KurList.Result.filter((item) => {
                            return item.dovizName === e.target.value;
                        })
                        this.SelectHedefDovizInfo = response[0].value;
                    }
                },
                GetDoviz: async (e) => {
                    let response = await axios.post('http://localhost:3000/GetDovizList', { Tarih: e.target.value });
                    this.KurList = response.data;
                },
                DovizHesapla: async (e) => {
                    this.Result = parseFloat(parseFloat(this.SelectHedefDovizInfo) * parseFloat(e.target.value) * parseFloat(this.SelectKaynakDovizInfo)).toFixed(2);
                }
            }
        })
    </script>
</body>

</html>